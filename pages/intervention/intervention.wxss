  /* pages/ganyu/ganyu.wxss */
.ganyulist-item{
  width: 100%
}
.musiclister{
  float:left;
  width:45%;
  margin:0 2.5% 30rpx 2.5%;
  padding-bottom:10px; 
  text-align: center;
  background: #eee;
  box-shadow:2px 2px 4px #787878;
}
.ganyulist-item image{
   display:block;
    width:100%; 
    margin:0 auto; 
    height: 300rpx
}
.ganyulist-item text{
  font-size: 14px;
  margin-top:20rpx;
  display: block
}
.musiclistbtn{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: -webkit-box;
  background: #298DE5
}
.musiclistbtn button{
  display: block;
  -webkit-box-flex: 1;
  float: left;
  border-top: 1px solid #ddd;
  background: #298DE5;
  color: #fff;
  border: #298DE5;
  border-radius: 0
}
.musics{
  border-bottom: 1px dashed #ccc;
  width: 96%;
  margin: 0 auto;
  height: 100rpx;
  line-height: 100rpx
}
.musics text{
  float: left;
  font-size: 30rpx;
  color: #333
}
.musics text:last-child{
  float: right;
  font-size: 26rpx;
  color: #666
}
.musics image{
  width: 52rpx;
  height: 52rpx;
  margin:24rpx;
  float: left
}